{{# each products }}
    <div class="row">
        {{# each this }}
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="{{ this.imagePath}}">
                <div class="caption">
                    <h3>Đội quân cảm xúc</h3>
                    <p class="description">{{this.description}}</p>
                    <div class="clearfix pager">
                        <div class="price">
                            {{ this.price}}
                        </div>
                        <a href="#" class="btn btn-danger " role="button">Add to Shopping Cart</a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
{{/each}}